		<form method="POST" action="/contactme">
		  <div class="form-group">
			<label for="nameInput">Name</label>
			<input type="text" class="form-control" name="contact[name]" id="nameInput" aria-describedby="emailHelp" required>
		  </div>
		  <div class="form-group">
			<label for="exampleInputEmail1">Email address</label>
			<input type="email" class="form-control" name="contact[email]" id="exampleInputEmail1" aria-describedby="emailHelp" required>
			<small id="emailHelp" class="form-text text-muted">I'll never share your email with anyone else.</small>
		  </div>
		   <div class="form-group">
    		<label for="exampleFormControlTextarea1">Question</label>
   			 <textarea class="form-control" name="contact[question]" id="exampleFormControlTextarea1" rows="3" required></textarea>
  			</div>	
		  <button type="submit" class="btn btn-dark">Submit</button>
		</form>
			
		</div>
